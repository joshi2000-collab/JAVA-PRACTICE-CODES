import java.util.Scanner;

class Revno {

	public static void main(String[] args) {
		
		Scanner s=new Scanner(System.in);
		System.out.print("Enter a number: ");
        int no=s.nextInt();
		int rev=0;
		while(no!=0)
		{
			int r=no%10;
			rev=rev*10+r;
			no=no/10;
			
		}
		System.out.print("rev no: "+rev);

	}

}
